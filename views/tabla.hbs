<h2 style="color:crimson;">Cantidad de  PRODUCTOS CARGADOS</h2>
{{#if productos.length}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow; display: flex"> 
            <th style= "margin-right: 18%">Nombre</th> 
            <th style= "margin-right: 10%">Precio</th> 
            <th style= "margin-right: 30%">Descripcion</th> 
            <th style= "margin-right: 10%">Foto del producto</th> 
            </tr>
            {{#each productos}}
            <tr style="color: yellow; display: flex">
                <td style= "margin-right: 50px; width: 20%">{{nombre}}</td>
                <td style= "margin-right: 50px; width: 10%">$ {{precio}}</td>
                <td style= "margin-right: 50px; width: 40%; font-size:12px">{{descripcion}}</td>
                <td style= "margin-right: 50px; width: 10%"> <img src="{{url}}" alt="asdasd" style = "width: 70%"; "heigth: 70%";> </td>
            </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <h3 class="alert alert-danger">No hay productos para listar</h1>
{{/if}}
